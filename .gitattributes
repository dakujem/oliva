# Exclude build/test files from archive
/.github          export-ignore
/dox              export-ignore
/examples         export-ignore
/tests            export-ignore
/.editorconfig    export-ignore
/.gitattributes   export-ignore
/.gitignore       export-ignore

# Configure diff output for .php and .phar files.
*.php diff=php
*.phar -diff

